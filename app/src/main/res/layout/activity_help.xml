<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="본 앱은 음악 스트리밍을 지원하며, 업로드기능을 탑재한
        신개념 음악감상 어플리케이션입니다."
        android:padding="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="음악을 들으려면?"
        android:textStyle="bold"
        android:padding="10dp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리스트목록에 원하는 음악을 선택하여 음악을 감상하실수 있습니다. 또한, 리스트를 길게 터치시, 본 기기 SD카드에 해당음악을 다운로드 하실수있습니다."
        android:padding="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="음악을 공유하려면?"
        android:textStyle="bold"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 본 기기에 SD카드가 설치되어 있어야합니다. *"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="화면 상단에 위치한 화살표버튼을 클릭하시면 탐색기가 실행됩니다. 탐색기에서 공유하려는 음악파일을 찾아서 3초간 길게 누르시면 업로드 하실수있는 창이 실행됩니다."
        android:padding="5dp"/>

</LinearLayout>